<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:background="#99F50057">

                <TextView
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:text="When this App Can be Helful for you ?"
                    android:textColor="#fff"
                    android:elevation="10dp"
                    android:textSize="17sp"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="When you FORGET/LOST your mobile somewhere (eg. Home) and now..."
                    android:textColor="#fff"
                    android:textSize="17sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_fast_forward_black_24dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Your Phone is in SILENT/VIBRATE MODE or LOW VOLUME and now You want your phone back to NORMAL MODE (FULL VOLUME)."
                        android:textColor="#fff"
                        android:textSize="17sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_fast_forward_black_24dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="You want CONTACT NUMBER of someone from your PhoneBook."
                        android:textColor="#fff"
                        android:textSize="17sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:background="#99F50057">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What you need to do ?"
                    android:padding="10dp"
                    android:textColor="#fff"
                    android:elevation="10dp"
                    android:textSize="17sp"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Just Send a Text Message in a SPECIFIC FORMAT (See Below for Specific Format) from any other mobile."
                    android:textColor="#fff"
                    android:textSize="17sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:background="#99F50057">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Specific Format of Text Message to be sent from any other Mobile"
                    android:textColor="#fff"
                    android:elevation="10dp"
                    android:padding="10dp"
                    android:textSize="17sp"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#9966BB6A"
                    android:padding="10dp"
                    android:text="Help[Space][PassKey][Space][Task_No]"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="17sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_fast_forward_black_24dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:text="For [Task_No] See Below [Task_No] for Specific Task to be Performed."
                        android:textColor="#fff"
                        android:textSize="17sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_fast_forward_black_24dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="[PassKey] is for your Security Purpose. It can be set in 'Set PassKey Navigation.'"
                        android:textColor="#fff"
                        android:textSize="17sp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="eg. Help 2616 2 Papa"
                    android:padding="10dp"
                    android:textColor="#fff"
                    android:textSize="17sp"/>

            </LinearLayout>

            <TableLayout
                android:padding="1dp"
                android:background="#99000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Task_No"
                        android:background="#20223C"
                        android:padding="10dp"
                        android:layout_margin="1dp"
                        android:textColor="#fff"
                        android:textSize="17sp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Task"
                        android:textColor="#fff"
                        android:layout_margin="1dp"
                        android:background="#20223C"
                        android:padding="10dp"
                        android:layout_weight="5"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:background="#20223C"
                        android:layout_margin="1dp"
                        android:padding="10dp"
                        android:layout_weight="2"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:text="Eg:"
                        android:textAlignment="center"
                        />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:background="#20223C"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:textColor="#fff"
                        android:textSize="17sp"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Silent/Vibrate/Low Volume to Normal Mode/Full Volume Switching"
                        android:textColor="#fff"
                        android:layout_margin="1dp"
                        android:layout_weight="5"
                        android:background="#20223C"
                        android:padding="10dp"
                        android:textSize="17sp"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:background="#20223C"
                        android:layout_margin="1dp"
                        android:padding="10dp"
                        android:layout_weight="2"
                        android:textSize="17sp"
                        android:text="Help 2616 1"
                        android:textAlignment="center"
                        />
                </TableRow>

            </TableLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>